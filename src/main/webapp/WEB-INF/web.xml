<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>${project.name} ${project.version}-${build-commit} build
		at ${build-tstamp}</display-name>

	<description>Supervisor webapp for standardized web services</description>

	<servlet>
		<servlet-name>Timer</servlet-name>
		<servlet-class>org.n52.supervisor.tasks.TaskServlet</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>/supervisor.properties</param-value>
		</init-param>
		<load-on-startup>10</load-on-startup>
	</servlet>

	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.n52.supervisor.guice.GuiceServletConfig</listener-class>
	</listener>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

